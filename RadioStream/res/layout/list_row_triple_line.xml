<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="77px">
	
	<ImageView
		android:id="@+id/ThreeLineRowMarker"
		android:src="@drawable/download_full"

		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		android:layout_marginLeft="4px"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
	/>
	
	<ImageView
		android:id="@+id/ThreeLineRowButton"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		
		android:src="@drawable/download_begin"
		android:background='#00000000'
		android:scaleType="center"
		android:padding='10px'
	/>
	
	<TextView
		android:id="@+id/StationsListRowTextLine1"
		android:layout_height="wrap_content"
		android:layout_width="fill_parent"
		android:layout_marginLeft="2px"
		android:layout_marginTop="-2px"
		android:layout_toRightOf="@id/ThreeLineRowMarker"
		android:layout_toLeftOf="@id/ThreeLineRowButton"
		
		android:ellipsize="end"
		android:maxLines='1'
		android:textColor="#ffffffff"
		android:textSize="20px"
		android:typeface="sans"
	/>
	
	<TextView
		android:id="@+id/StationsListRowTextLine2"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="-2px"
		android:layout_marginLeft="6px"
		android:layout_marginRight="-4px"
		android:layout_below="@id/StationsListRowTextLine1"
		android:layout_toRightOf="@id/ThreeLineRowMarker"
		android:layout_toLeftOf="@id/ThreeLineRowButton"
		
		android:minLines='2'
		android:maxLines='2'
		android:ellipsize="end"
		android:textColor="#ffaaaaaa"
		android:textSize="14px"
		android:typeface="sans"
	/>
	
	<TextView
		android:id="@+id/StationsListRowTextLine3"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="8px"
		android:layout_marginRight="8px"
		android:layout_marginBottom="2px"
		android:layout_toRightOf="@id/ThreeLineRowMarker"
		android:layout_toLeftOf="@id/ThreeLineRowButton"
		android:layout_below="@id/StationsListRowTextLine2"
		
		android:ellipsize="end"
		android:maxLines='1'
		android:textColor="#ffaaaaaa"
		android:textSize="14px"
		android:typeface="sans"
	/>
	
	<ProgressBar
		android:id="@+id/ThreeLineRowProgress"
		android:layout_height="10px"
		android:layout_width="160px"
		android:layout_marginTop="3px"
		android:layout_toLeftOf="@id/ThreeLineRowButton"
		android:layout_below="@id/StationsListRowTextLine2"
		
		android:progressDrawable="@android:drawable/progress_horizontal"
		android:indeterminateOnly="false"
		android:indeterminate="false"
		android:visibility="invisible"
	/>
	
</RelativeLayout>
