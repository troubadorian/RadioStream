<?xml version="1.0" encoding="UTF-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/LyricsView"
	android:background="#ff000000"
	android:layout_width="320px"
	android:layout_height="455px">

	<view
		class="com.clearchannel.android.views.NavBar"
		android:id="@+id/LyricsViewNavBar"
		android:layout_width="fill_parent"
		android:layout_height="45px"
		android:layout_x="0px"
		android:layout_y="0px"/>

	<ProgressBar android:id="@+id/lyricsProgressSpinner"
		style="?android:attr/progressBarStyleSmallTitle"
		android:layout_width="20px"
		android:layout_height="20px"
		android:layout_x="290px"
		android:layout_y="12px"
		android:visibility="invisible"/>

	<WebView
		android:id="@+id/lyricsWebView"
		android:layout_width="320px"
		android:layout_height="366px"
		android:layout_x="0px"
		android:layout_y="45px"/>

	<ImageView
		android:src="@drawable/nav_background_1px_bottom"
		android:scaleType="fitXY"
		android:layout_width="320px"
		android:layout_height="44px"
		android:layout_x="0px"
		android:layout_y="411px"/>

	<ImageButton
		android:id="@+id/lyricsBackButton"
		android:background="@drawable/empty"
		android:src="@drawable/web_back"
		android:layout_width="51px"
		android:layout_height="30px"
		android:layout_x="20px"
		android:layout_y="418px"/>

	<ImageButton
		android:id="@+id/lyricsForwardButton"
		android:background="@drawable/empty"
		android:src="@drawable/web_fwd"
		android:layout_width="51px"
		android:layout_height="30px"
		android:layout_x="249px"
		android:layout_y="418px"/>

</AbsoluteLayout>
