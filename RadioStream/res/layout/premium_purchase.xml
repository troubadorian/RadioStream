<?xml version='1.0' encoding='UTF-8'?>
<RelativeLayout xmlns:android='http://schemas.android.com/apk/res/android'
	android:background='#00000000'
	android:layout_width='fill_parent'
	android:layout_height='fill_parent'>
	
	<Button
		android:id='@+id/PurchaseButton'
		android:layout_centerHorizontal='true'
		android:layout_height='wrap_content'
		android:layout_width='fill_parent'
		android:layout_marginTop='2px'
		android:layout_marginLeft='15px'
		android:layout_marginRight='5px'
		
		android:text='Create your account now'
	/>
	
	<TextView
		android:id='@+id/PurchaseDescription'
		android:layout_centerHorizontal='true'
		android:layout_height='wrap_content'
		android:layout_width='fill_parent'
		android:layout_marginTop='-3px'
		android:layout_marginLeft='10px'
		android:layout_marginRight='10px'
		android:layout_below='@id/PurchaseButton'
		
		android:text='Or send a weblink to your inbox and sign up later.'
		android:gravity='center'
		android:textColor='#FFFFFFFF'
		android:textSize='12px'
		android:typeface='sans'
	/>
	
	<TextView
		android:id='@+id/PurchaseRequestLabel'
		android:layout_height='wrap_content'
		android:layout_width='60px'
		android:layout_marginTop='7px'
		android:layout_below='@id/PurchaseDescription'
		
		android:text='Email:'
		android:gravity='right'
		android:textColor='#ffffffff'
		android:textSize='14px'
		android:typeface='sans'
	/>
	
	<EditText
		android:id='@+id/PurchaseRequest'
		android:layout_height='wrap_content'
		android:layout_width='fill_parent'
		android:layout_below='@id/PurchaseDescription'
		android:layout_alignBaseline='@id/PurchaseRequestLabel'
		android:layout_toRightOf='@id/PurchaseRequestLabel'
		android:layout_marginRight='12px'
		android:layout_marginLeft='12px'
		
		android:text=''
		android:hint='me@my.com'
		android:gravity='left'
		android:ellipsize='end'
		android:maxLines='1'
		android:textColor='#FF000000'
		android:textSize='14px'
		android:typeface='sans'
	/>
</RelativeLayout>
