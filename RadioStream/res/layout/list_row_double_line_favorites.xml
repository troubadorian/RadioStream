<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="44px">

	<ImageView
		android:id="@+id/AutoplayTriangle"
		android:src="@drawable/play_red"

		android:layout_centerVertical="true"
		android:layout_height="18px"
		android:layout_marginLeft="4px"
		android:layout_width="15px"
		android:visibility="invisible"
	/>

	<TextView
		android:id="@+id/StationsListRowTextLine1"
		android:layout_width="fill_parent"
		android:layout_height="26px"
		android:layout_marginLeft="4px"
		android:layout_marginRight="8px"
		android:layout_toLeftOf="@+id/FavoritesChevron"
		android:layout_toRightOf="@+id/AutoplayTriangle"

		android:ellipsize="end"
		android:singleLine="true"
		android:textColor="#ffffffff"
		android:textSize="20px"
		android:typeface="sans"
	/>

	<TextView
		android:id="@+id/StationsListRowTextLine2"
		android:layout_width="fill_parent"
		android:layout_height="16px"
		android:layout_marginLeft="8px"
		android:layout_marginRight="8px"
		android:layout_marginTop="24px"
		android:layout_toLeftOf="@+id/FavoritesChevron"
		android:layout_toRightOf="@+id/AutoplayTriangle"

		android:ellipsize="end"
		android:singleLine="true"
		android:textColor="#ffaaaaaa"
		android:textSize="12px"
		android:typeface="sans"
	/>

	<ImageView
		android:id="@+id/FavoritesChevron"
		android:src="@drawable/chevron"

		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:layout_height="13px"
		android:layout_marginRight="8px"
		android:layout_width="10px"
	/>
</RelativeLayout>
